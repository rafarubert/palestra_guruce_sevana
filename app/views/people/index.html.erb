<h1>Lista de pessoas</h1>

<table>
	<tr>
		<th>Nome</th>
		<th>Opções</th>
	</tr>
<% @people.each do |person| %>
	<tr>
		<td>
			<%= person.name %>
		</td>
		<td>
			<%= link_to 'Ver', person %> |
			<%= link_to 'Editar', edit_person_path(person) %> | 
			<%= link_to 'Apagar', person, confirm: 'Realmente deseja apagar?', method: :delete %>
		</td>
	</tr>
<%end%>
</table>


<%=link_to "Nova", new_person_path %>

<p id="mostrar" >
	MOSTRAR
</p>

<p id="escondido" >
	ESCONDIDO
</p>

<p>
	leu
</p>

<p id="dentro">
	nada
</p>

<script type="text/javascript" charset="utf-8">
	$("#mostrar").click(function(){
		$("#escondido").show();
	});
</script>